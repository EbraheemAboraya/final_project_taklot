<script>
  const socket = io(); 

  socket.on("new-request", function(data) {
    const notificationsDiv = document.getElementById("notifications");
    const notification = document.createElement("p");
    // Correctly accessing the category and details from the data object
    notification.textContent = `New request in category '${data.category}': ${data.details}`;
    notificationsDiv.appendChild(notification);

    // Increment the notification count
    const badge = document.getElementById("notificationBadge");
    let count = parseInt(badge.textContent) || 0;
    badge.textContent = ++count;

    if (count > 0) {
      badge.classList.add('show-badge');
    }

  });

  document.addEventListener('DOMContentLoaded', function() {
    const bellIcon = document.querySelector('.bi-bell'); // Adjust the selector if necessary
    bellIcon.addEventListener('click', function() {
      const badge = document.getElementById('notificationBadge');
      badge.classList.remove('show-badge'); // Hide the badge
      badge.textContent = '0'; // Reset the count, optional based on your needs

    });
  });
</script>



